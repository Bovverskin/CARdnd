%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
        = f.label :password
    - if @minimum_password_length
        %em
        (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password"
    .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
    .field
        = f.label :firstname
        %br/
        = f.text_field :firstname, autocomplete: "first-name"
    .field
        = f.label :lastname
        %br/
        = f.text_field :lastname, autocomplete: "last-name"
    .field
        = f.label :address
        %br/
        = f.text_field :address, autocomplete: "address"
    .field
        = f.label :drivingage
        %br/
        = f.text_field :drivingage, autocomplete: "drivingage"
    .field
        = f.label :age
        %br/
        = f.text_field :age, autocomplete: "age"
    .field
        = f.label :about
        %br/
        = f.text_area :about, autocomplete: "about"
    .field
        = f.label :phone
        %br/
        = f.text_field :phone, autocomplete: "phone"
    .actions
        = f.submit "Sign up"
= render "devise/shared/links"